<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_bg"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginBottom="1dp"
        android:gravity="center_vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">

        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:paddingRight="8dp">

            <View
                android:id="@+id/round"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:background="@drawable/shape_round_fb6a42" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名称11"
                android:textColor="@color/color_333333"
                android:textSize="11dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_value"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_333333"
                android:textSize="11dp" />

            <LinearLayout
                android:id="@+id/iv_show_more"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@mipmap/stream_show_all" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/learnValue"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="学习值11"
            android:textColor="@color/color_333333"
            android:textSize="11dp"
            android:visibility="gone" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/operations_top"
                android:layout_width="36dp"
                android:layout_height="18dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/common_button_selector_blue_hollow"
                android:gravity="center"
                android:text="置顶"
                android:textColor="@color/color_blue"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/operations_replace"
                android:layout_width="36dp"
                android:layout_height="18dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/common_button_selector_red_hollow"
                android:gravity="center"
                android:text="替换"
                android:textColor="#FD6A43"
                android:textSize="10dp"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:id="@+id/operations_remove"
            android:layout_width="36dp"
            android:layout_height="18dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/common_button_selector_blue_hollow"
            android:gravity="center"
            android:text="移除"
            android:textColor="@color/color_blue"
            android:textSize="10dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_more_same_tips"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="通过小云师傅智能分析，该条数据流还有以下可能，请选择一个合适的点击替换即可"
        android:textColor="#FB6A42"
        android:visibility="gone" />

</LinearLayout>

