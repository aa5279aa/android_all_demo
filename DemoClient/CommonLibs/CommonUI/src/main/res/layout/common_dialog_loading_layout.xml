<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/insert_ad_layout"
        android:layout_width="@dimen/dip315"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/color_ffffff"
        android:minHeight="@dimen/dip197"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_c2c2c2"
            android:padding="@dimen/dip10"
            android:text="提示"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp18" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/dip14">

                <ImageView
                    android:id="@+id/common_dialog_icon"
                    android:layout_width="@dimen/dip45"
                    android:layout_height="@dimen/dip45"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dip7"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/common_dialog_title"
                    style="@style/text_16_333333"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dip7"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="检查到您的APP需要更新" />

            </LinearLayout>

        </RelativeLayout>


        <Button
            android:id="@+id/comfirm_button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="确认"
            android:visibility="gone">

        </Button>

    </LinearLayout>

</RelativeLayout>
