<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#ffdbdbdb" />
            <gradient android:type="linear" android:useLevel="true" android:startColor="#ffffffff" android:endColor="#ffe2e2e2" android:angle="360" />
            <solid android:color="#DBDBDB" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#ffdbdbdb" />
            <gradient android:type="linear" android:useLevel="true" android:startColor="#ffffffff" android:endColor="#ffe2e2e2" android:angle="180" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#ffdbdbdb" />
            <gradient android:type="linear" android:useLevel="true" android:startColor="#ffffffff" android:endColor="#ffe2e2e2" android:angle="180" />
            <corners android:radius="4dp" />
        </shape>
    </item>

</selector>
