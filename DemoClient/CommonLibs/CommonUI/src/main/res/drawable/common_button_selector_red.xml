<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="#ffd42e15" android:startColor="#fffd8a7c" android:type="linear" android:useLevel="true" />
            <solid android:color="#d4132d" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:startColor="#ffd42e15" android:endColor="#fffd8a7c" android:type="linear" android:useLevel="true" />
            <corners android:radius="4dp" />
        </shape>
    </item>

</selector>
