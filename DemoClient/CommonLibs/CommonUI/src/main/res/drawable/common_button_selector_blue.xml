<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#ff187ff2" />
            <gradient android:angle="90" android:endColor="#ff0571f6" android:startColor="#ff46b5ff" android:type="linear" android:useLevel="true" />
            <solid android:color="#187FF2" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#ff187ff2" />
            <gradient android:angle="270" android:endColor="#ff0571f6" android:startColor="#ff46b5ff" android:type="linear" android:useLevel="true" />
            <solid android:color="#ff1b56af" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#ff187ff2" />
            <gradient android:angle="270" android:endColor="#ff0571f6" android:startColor="#ff46b5ff" android:type="linear" android:useLevel="true" />
            <corners android:radius="4dp" />
        </shape>
    </item>

</selector>
